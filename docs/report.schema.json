{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/file-sanitizer/report.schema.json",
  "title": "file-sanitizer JSONL report line",
  "description": "Schema for a single JSON object line in the file-sanitizer JSONL report.",
  "oneOf": [
    { "$ref": "#/$defs/fileRecord" },
    { "$ref": "#/$defs/summaryRecord" }
  ],
  "$defs": {
    "warning": {
      "type": "object",
      "additionalProperties": true,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" }
      }
    },
    "fileRecord": {
      "type": "object",
      "additionalProperties": true,
      "required": ["report_version", "input_path", "output_path", "action", "warnings", "error"],
      "properties": {
        "report_version": { "type": "integer", "minimum": 1 },
        "input_path": { "type": "string" },
        "output_path": { "type": ["string", "null"] },
        "action": { "type": "string" },
        "warnings": { "type": "array", "items": { "$ref": "#/$defs/warning" } },
        "error": { "type": ["string", "null"] }
      }
    },
    "summaryRecord": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "type",
        "report_version",
        "dry_run",
        "exit_code",
        "files",
        "warnings",
        "errors",
        "counts"
      ],
      "properties": {
        "type": { "const": "summary" },
        "report_version": { "type": "integer", "minimum": 1 },
        "dry_run": { "type": "boolean" },
        "exit_code": { "type": "integer", "minimum": 0 },
        "files": { "type": "integer", "minimum": 0 },
        "warnings": { "type": "integer", "minimum": 0 },
        "errors": { "type": "integer", "minimum": 0 },
        "counts": {
          "type": "object",
          "additionalProperties": { "type": "integer", "minimum": 0 }
        }
      }
    }
  }
}

